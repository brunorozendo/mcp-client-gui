<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.brunorozendo.mcpclientgui.controller.SettingsController">
   <children>
      <Label text="MCP Client GUI Settings" styleClass="settings-title">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      
      <Separator />
      
      <GridPane hgap="10.0" vgap="15.0">
         <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="NEVER" minWidth="120.0" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="NEVER" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         
         <children>
            <Label text="LLM Model:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="llmModelField" promptText="e.g., llama3.2, qwen:7b" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2" />
            
            <Label text="MCP Config File:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="mcpConfigPathField" promptText="Path to mcp.json file" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="browseMcpConfigButton" onAction="#handleBrowseMcpConfig" text="Browse..." GridPane.columnIndex="2" GridPane.rowIndex="1" />
            
            <Label text="Ollama Base URL:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="ollamaBaseUrlField" promptText="http://localhost:11434" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2" />
         </children>
      </GridPane>
      
      <Separator />
      
      <VBox spacing="10.0">
         <children>
            <Label text="Configuration Help:" styleClass="help-title">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label text="• LLM Model: The name of the Ollama model to use (e.g., llama3.2, qwen:7b)" styleClass="help-text" wrapText="true" />
            <Label text="• MCP Config File: Path to your mcp.json configuration file that defines MCP servers" styleClass="help-text" wrapText="true" />
            <Label text="• Ollama Base URL: The URL where your Ollama instance is running" styleClass="help-text" wrapText="true" />
         </children>
      </VBox>
      
      <Region VBox.vgrow="ALWAYS" />
      
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
            <Button fx:id="saveButton" onAction="#handleSave" text="Save" defaultButton="true" styleClass="primary-button" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
